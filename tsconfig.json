{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": false,
    "jsx": "react-native",
    "noEmit": false,
    "incremental": true,
    "isolatedModules": true,
    "strict": true,
    "noImplicitAny": false,
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "apollo": ["./src/apollo"],
      "assets": ["./src/assets"],
      "components": ["./src/components"],
      "navigator": ["./src/navigator"],
      "screens": ["./src/screens"],
      "style": ["./src/style"],
      "services": ["./src/services"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
